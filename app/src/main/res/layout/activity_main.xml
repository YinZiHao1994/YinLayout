<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="yin.source.com.yinlayoutsample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlowLayout" />

    <yin.source.com.yinlayout.FlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckableGroupFlowLayout" />

    <yin.source.com.yinlayout.CheckableGroupFlowLayout
        android:id="@+id/checkable_flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
