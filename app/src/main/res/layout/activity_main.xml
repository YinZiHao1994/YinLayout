<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.source.yin.yinlayoutsample.MainActivity">


    <Button
        android:id="@+id/btn_flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlowLayout" />

    <Button
        android:id="@+id/btn_checkable_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckableGroup" />

    <Button
        android:id="@+id/btn_moon_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MoonMenu" />

    <Button
        android:id="@+id/btn_side_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SideMenu" />

    <Button
        android:id="@+id/btn_flip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flipView" />

</LinearLayout>
